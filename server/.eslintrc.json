{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["airbnb"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  
  "rules": {
    "no-console": "off",
    "linebreak-style": "off",
    "no-use-before-define": ["error", { "functions": false }],
    "indent": "warn",
    "no-trailing-spaces": "off",
    "quotes": "warn", 
    "no-underscore-dangle": "warn",
    "consistent-return": "warn",
    "camelcase": "warn",
    "one-var": "warn",
    "prefer-destructuring": "warn",
    "no-param-reassign": 0
  }
}
